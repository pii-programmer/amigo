<div class="container">
  <div class="room-chat">
    <h3><%= @room.title %></h3>
    <div class="room-chat-header">
      <%= link_to "#{current_user.nickname}さん", user_path(current_user.id), class: "user-nickname" %>
      <%= link_to "ユーザーニックネームさん", user_path(current_user.id), class: "user-nickname" %> <%#ここに２人目のユーザーを紐づける%>
      <%= form_with model: [@room, @message], local: true do |form| %>
        <div class="room-chat-form">
          <%= form.text_field :content, class: 'messages-content' %>
          <%= form.submit 'しゃべってみる', class: 'submit' %>
        </div>
      <% end %>
    </div>

    <% @messages.each do |message| %>
      <div class="room-chat-detail">
        <%= message.content %>
      </div>
    <% end %>

    <div class="return-btn">
      <%= link_to 'ルーム一覧に戻る', rooms_path, class:"room-index" %>
      <%= link_to 'メインチャットに戻る', chats_path, class:"main-chat" %>
    </div>

  </div>
</div>

<%= render "shared/footer" %>