<%= render "shared/header" %>

<div class="container">
  <div class="account">
    <h2>サインインページ</h2>
    
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>
    
          <div class="field">
            <%= f.label :ニックネーム, class:"nickname" %> <em>(半角30文字以内)</em><br />
            <%= f.text_field :nickname, autofocus: true %>
          </div>
    
          <div class="field">
            <%= f.label :メールアドレス, class:"email" %><br />
            <%= f.email_field :email %>
          </div>
    
          <div class="field">
            <%= f.label :アバター, class:"avatar" %><br />
            <%= f.file_field :avatar %>
          </div>
    
          <div class="field">
            <%= f.label :パスワード, class:"password" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
    
          <div class="field">
            <%= f.label :パスワードの確認, class:"password-confirmation" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
    
          <div class="actions">
            <%= f.submit "サインイン" %>
          </div>
    
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>